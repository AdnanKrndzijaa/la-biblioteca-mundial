<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D9D9D9"
    tools:context=".login.Login">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_marginTop="0dp"
        android:layout_height="90dp"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/loginView"
        android:background="@drawable/login_shape">
    </androidx.constraintlayout.widget.ConstraintLayout>


    <ImageView
        android:id="@+id/icon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@+id/loginView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="-50dp"
        android:src="@drawable/labibliotecamundiallogored">
    </ImageView>


    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/icon"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="15dp"
        android:text="Login"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textAlignment="textStart"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:fontFamily="@font/rufina"
        android:textColor="#333"
        android:textSize="24dp"
        android:textStyle="bold">
    </TextView>
    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/title"
        android:layout_marginTop="20dp"
        android:text="Welcome back, we hope you enjoy continuing the adventure with the many books available."
        android:textAlignment="textStart"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:fontFamily="@font/rufina"
        android:textColor="#333"
        android:textSize="14dp">
    </TextView>
    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        app:layout_constraintTop_toBottomOf="@id/text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/button_outer_biblioteca"
        android:hint="Enter your email"
        android:textColorHint="#555"
        android:gravity="center_vertical"
        android:fontFamily="@font/rufina"
        android:textColor="#333"
        android:textSize="13dp"
        android:inputType="textEmailAddress"
        android:paddingLeft="10dp"
        android:layout_marginTop="40dp">
    </EditText>
    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        app:layout_constraintTop_toBottomOf="@id/email"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/button_outer_biblioteca"
        android:hint="Enter your password"
        android:inputType="textCapSentences|textPassword"
        android:textColorHint="#555"
        android:gravity="center_vertical"
        android:fontFamily="@font/rufina"
        android:textColor="#333"
        android:textSize="13dp"
        android:paddingLeft="10dp"
        android:layout_marginTop="15dp">
    </EditText>

    <TextView
        android:id="@+id/forgotPassword"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        app:layout_constraintTop_toBottomOf="@id/password"
        android:layout_marginTop="5dp"
        android:text="Forgot your password?"
        android:gravity="right|center_vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:fontFamily="@font/rufina"
        android:textColor="#333"
        android:textSize="14dp">
    </TextView>

    <TextView
        android:id="@+id/loginContinueButton"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        app:layout_constraintTop_toBottomOf="@+id/forgotPassword"
        android:layout_marginTop="15dp"
        android:text="Continue"
        android:clickable="true"
        android:gravity="center"
        android:textAlignment="center"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/button_biblioteca"
        android:fontFamily="@font/rufina"
        android:textColor="#f5f5f5"
        android:textSize="14dp">
    </TextView>

    <TextView
        android:id="@+id/registerText"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        app:layout_constraintTop_toBottomOf="@id/loginContinueButton"
        android:layout_marginTop="35dp"
        android:text="Do not have an account?"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:fontFamily="@font/rufina"
        android:textColor="#333"
        android:textSize="14dp">
    </TextView>
    <TextView
        android:id="@+id/register"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        app:layout_constraintTop_toBottomOf="@id/registerText"
        android:layout_marginTop="0dp"
        android:text="Register Now"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:fontFamily="@font/rufina"
        android:textColor="#333"
        android:textStyle="bold"
        android:textSize="14dp">
    </TextView>
    <TextView
        android:id="@+id/copyright"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:clickable="true"
        android:fontFamily="@font/rufina"
        android:gravity="center"
        android:text="Copyright Â© La Biblioteca Mundial"
        android:textColor="#555"
        android:textSize="12dp"
        android:layout_marginBottom="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">
    </TextView>
</androidx.constraintlayout.widget.ConstraintLayout>