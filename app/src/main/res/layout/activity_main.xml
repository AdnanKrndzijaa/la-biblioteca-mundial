<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/mainbg"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
    </ImageView>



    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_marginTop="0dp"
        android:layout_height="90dp"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/loginView"
        android:background="@drawable/login_shape">
    </androidx.constraintlayout.widget.ConstraintLayout>



    <ImageView
        android:id="@+id/icon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@+id/loginView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="-50dp"
        android:src="@drawable/labibliotecamundiallogored">
    </ImageView>



    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/text"
        android:layout_marginBottom="15dp"
        android:text="Welcome to La Biblioteca Mundial"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textAlignment="textStart"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:fontFamily="@font/rufina"
        android:textColor="#f5f5f5"
        android:textSize="32dp"
        android:textStyle="bold">
    </TextView>

    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/loginButton"
        android:layout_marginBottom="50dp"
        android:text="Join us on an unforgettable adventure at a book lover's favourite place with over 200 books available in many languages. Discover new books &amp; give your recommendation after reading."
        android:textAlignment="textStart"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:fontFamily="@font/rufina"
        android:textColor="#f5f5f5"
        android:textSize="14dp">
    </TextView>

    <TextView
        android:id="@+id/loginButton"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        app:layout_constraintBottom_toTopOf="@+id/copyright"
        android:layout_marginBottom="30dp"
        android:text="Continue"
        android:clickable="true"
        android:gravity="center"
        android:textAlignment="center"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/button_biblioteca"
        android:fontFamily="@font/rufina"
        android:textColor="#f5f5f5"
        android:textSize="14dp">
    </TextView>



    <TextView
        android:id="@+id/copyright"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:clickable="true"
        android:fontFamily="@font/rufina"
        android:gravity="center"
        android:text="Copyright Â© La Biblioteca Mundial"
        android:textColor="#bebebe"
        android:textSize="12dp"
        android:layout_marginBottom="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">
    </TextView>



</androidx.constraintlayout.widget.ConstraintLayout>